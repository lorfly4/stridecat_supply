<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Edit History Pembelian</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/plugins/fontawesome-free/css/all.min.css" />
    <!-- AdminLTE -->
    <link rel="stylesheet" href="/dist/css/adminlte.min.css" />
  </head>
  <body class="hold-transition sidebar-mini">
    <div class="wrapper">
      <!-- Navbar -->
      <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"
              ><i class="fas fa-bars"></i
            ></a>
          </li>
        </ul>
        <ul class="navbar-nav ml-auto">
          <li class="nav-item dropdown">
            <a class="nav-link" data-toggle="dropdown" href="#">
              <i class="far fa-user"></i>
              <span><%= users.nama ? users.nama : 'Guest' %></span>
            </a>
            <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
              <a href="/profil" class="dropdown-item">
                <i class="fas fa-user mr-2"></i> Profil
              </a>
              <div class="dropdown-divider"></div>
              <a href="/logout" class="dropdown-item">
                <i class="fas fa-sign-out-alt mr-2"></i> Logout
              </a>
            </div>
          </li>
        </ul>
      </nav>
      <!-- /.navbar -->

      <!-- Main Sidebar Container -->
      <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <a href="/landing" class="brand-link">
          <span class="brand-text font-weight-light">Stridecat Supply</span>
        </a>
        <div class="sidebar">
          <div class="user-panel mt-3 pb-3 mb-3 d-flex">
            <div class="image">
              <img
                src="<%= users.foto ? users.foto : '/img/avatar.png' %>"
                class="img-circle elevation-2"
                alt="User Image"
              />
            </div>
            <div class="info">
              <a href="#" class="d-block"
                ><%= users.nama ? users.nama : 'Guest' %></a
              >
            </div>
          </div>
          <nav class="mt-2">
            <ul
              class="nav nav-pills nav-sidebar flex-column"
              data-widget="treeview"
              role="menu"
            >
              <li class="nav-item">
                <a href="/landing" class="nav-link active">
                  <i class="nav-icon fas fa-home"></i>
                  <p>Home</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/profil" class="nav-link">
                  <i class="nav-icon fas fa-user"></i>
                  <p>Profil</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/produk" class="nav-link">
                  <i class="nav-icon fas fa-book"></i>
                  <p>Produk</p>
                </a>
              </li>
              <li class="nav-item">
                <a href="/history" class="nav-link">
                  <i class="nav-icon fas fa-book"></i>
                  <p>History Pembelian</p>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </aside>

      <!-- Content Wrapper. Contains page content -->
      <div class="content-wrapper">
        <div class="content-header">
          <div class="container-fluid">
            <div class="row mb-2">
              <div class="col-sm-6">
                <h1 class="m-0">Edit History Pembelian</h1>
              </div>
            </div>
          </div>
        </div>

        <section class="content">
          <div class="container-fluid">
            <div class="row">
              <div class="col-md-8">
                <div class="card card-primary">
                  <div class="card-header">
                    <h3 class="card-title">Edit Data History</h3>
                  </div>
                  <form action="/history/<%= history.id %>/edit" method="post">
                    <div class="card-body">
                      <div class="form-group">
                        <label>Status</label>
                        <select class="form-control" name="status" required>
                          <option value="belum bayar" <%= history.status === 'belum bayar' ? 'selected' : '' %>>Belum Bayar</option>
                          <option value="sudah di bayar" <%= history.status === 'sudah di bayar' ? 'selected' : '' %>>Sudah di Bayar</option>
                          <option value="sedang dikemas" <%= history.status === 'sedang dikemas' ? 'selected' : '' %>>Sedang di Kemas</option>
                          <option value="dikirim" <%= history.status === 'dikirim' ? 'selected' : '' %>>Dikirim</option>
                        </select>
                      </div>
                      <div class="form-group">
                        <label>Tanggal</label>
                        <input
                          type="date"
                          class="form-control"
                          name="tanggal"
                          value="<%= history.tanggal ? history.tanggal.toISOString ? history.tanggal.toISOString().slice(0,10) : history.tanggal.substring(0,10) : '' %>"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <label>Metode Pembayaran</label>
                        <input
                          type="text"
                          class="form-control"
                          name="metode_pembayaran"
                          value="<%= history.metode_pembayaran %>"
                          required
                        />
                      </div>
                      <div class="form-group">
                        <label>Resi</label>
                        <input
                          type="text"
                          class="form-control"
                          name="resi"
                          value="<%= history.resi %>"
                        />
                      </div>
                      <div class="form-group">
                        <label>Jasa Pengiriman</label>
                        <input
                          type="text"
                          class="form-control"
                          name="jasa_pengiriman"
                          value="<%= history.jasa_pengiriman %>"
                        />
                      </div>
                    </div>
                    <div class="card-footer">
                      <button type="submit" class="btn btn-primary">
                        Simpan
                      </button>
                      <a href="/history" class="btn btn-secondary">Batal</a>
                    </div>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </section>
      </div>
      <!-- /.content-wrapper -->
    </div>
  </body>
</html>
