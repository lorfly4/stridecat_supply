<html lang="en">

<head>
  <meta charset="utf-8" />
  <meta content="width=device-width, initial-scale=1" name="viewport" />
  <title>Stridecat Supply</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" rel="stylesheet" />
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&amp;display=swap" rel="stylesheet" />
  <style>
    body {
      font-family: "Poppins", sans-serif;
    }
  </style>
</head>

<body class="bg-white text-gray-900">
  <!-- Top Bar -->
  <div class="bg-gray-900 text-gray-300 text-sm py-2 px-4 flex justify-between items-center">
    <div class="flex space-x-6">
      <a class="hover:text-white flex items-center space-x-1" href="#">
        <i class="fas fa-phone-alt"> </i>
        <span> +62 812-3456-7890 </span>
      </a>
      <a class="hover:text-white flex items-center space-x-1" href="#">
        <i class="fas fa-envelope"> </i>
        <span> info@stridecatsupply.com </span>
      </a>
    </div>
    <div class="flex space-x-4">
      <a class="hover:text-white" href="#">
        <i class="fab fa-facebook-f"> </i>
      </a>
      <a class="hover:text-white" href="#">
        <i class="fab fa-instagram"> </i>
      </a>
      <a class="hover:text-white" href="#">
        <i class="fab fa-twitter"> </i>
      </a>
      <a class="hover:text-white" href="#">
        <i class="fab fa-youtube"> </i>
      </a>
    </div>
  </div>
  <!-- Header / Navbar -->
  <header class="border-b border-gray-200">
    <div class="container mx-auto px-4 flex items-center justify-between py-4">
      <a class="flex items-center space-x-2" href="#">
        <img alt="Twone Vape logo with stylized text and vape icon" class="h-12 w-auto" height="50"
          src="https://storage.googleapis.com/a1aa/image/2309b1be-cc9a-4356-5dfe-5d0f739b764a.jpg" width="150" />
      </a>
      <nav class="hidden md:flex space-x-8 font-semibold text-gray-700">
        <a class="hover:text-red-600 transition" href="#"> Home </a>
        <a class="hover:text-red-600 transition" href="#products"> Products </a>
      </nav>
      <div class="hidden md:flex items-center space-x-4">
        <button aria-label="Search" class="text-gray-700 hover:text-red-600 transition focus:outline-none">
          <i class="fas fa-search text-lg"> </i>
        </button>
        <button aria-label="Shopping Cart"
        class="text-gray-700 hover:text-red-600 transition focus:outline-none relative">
        <i class="fas fa-shopping-cart text-lg"> </i>
        <span
        class="absolute -top-2 -right-2 bg-red-600 text-white rounded-full text-xs w-5 h-5 flex items-center justify-center">
        <%= keranjangList ? keranjangList.length : 0 %>
    </span>
</button>
<div class="relative"></div>
    <button aria-label="User Account" class="text-gray-700 hover:text-red-600 transition focus:outline-none flex items-center space-x-2" onclick="toggleMenu()" type="button">
        <i class="fas fa-user text-lg"></i>
        <span><%= users && users.name ? users.name : 'Account' %></span>
        <i class="fas fa-caret-down ml-1"></i>
    </button>
    <div id="accountMenu" class="absolute right-0 mt-2 w-40 bg-white border border-gray-200 rounded shadow-lg hidden z-50">
        <a href="/logout" class="block px-4 py-2 text-gray-700 hover:bg-red-50 hover:text-red-600">Logout</a>
    </div>
</div>
<script>
    function toggleMenu() {
        const menu = document.getElementById('accountMenu');
        menu.classList.toggle('hidden');
    }
    // Close menu when clicking outside
    document.addEventListener('click', function (e) {
        const btn = document.querySelector('[onclick="toggleMenu()"]');
        const menu = document.getElementById('accountMenu');
        if (!btn.contains(e.target) && !menu.contains(e.target)) {
            menu.classList.add('hidden');
        }
    });
</script>
      </div>
      <button aria-label="Toggle menu" class="md:hidden text-gray-700 hover:text-red-600 focus:outline-none"
        id="mobile-menu-button">
        <i class="fas fa-bars text-2xl"> </i>
      </button>
    </div>
    <!-- Mobile Menu -->
    <nav aria-label="Mobile menu" class="hidden md:hidden bg-white border-t border-gray-200" id="mobile-menu">
      <a class="block px-4 py-3 border-b border-gray-200 font-semibold text-gray-700 hover:bg-red-50 hover:text-red-600"
        href="#">
        Home
      </a>
      <a class="block px-4 py-3 border-b border-gray-200 font-semibold text-gray-700 hover:bg-red-50 hover:text-red-600"
        href="#">
        Products
      </a>
        <script>
          function toggleMenu() {
            const menu = document.getElementById('accountMenu');
            menu.classList.toggle('hidden');
          }

          // Close menu when clicking outside
          document.addEventListener('click', function (e) {
            const btn = document.querySelector('[onclick="toggleMenu()"]');
            const menu = document.getElementById('accountMenu');
            if (!btn.contains(e.target) && !menu.contains(e.target)) {
              menu.classList.add('hidden');
            }
          });
        </script>

      </div>
      <button aria-label="Shopping Cart"
        class="text-gray-700 hover:text-red-600 transition focus:outline-none relative">
        <i class="fas fa-shopping-cart text-lg"> </i>
        <span
          class="absolute -top-2 -right-2 bg-red-600 text-white rounded-full text-xs w-5 h-5 flex items-center justify-center">
          2
        </span>
      </button>
      </div>
    </nav>
  </header>
  <!-- Hero Section -->
  <section class="relative bg-gray-100">
    <div class="container mx-auto px-4 py-16 flex flex-col md:flex-row items-center md:space-x-12">
      <div class="md:w-1/2 text-center md:text-left">
        <h1 class="text-4xl md:text-5xl font-extrabold text-gray-900 leading-tight mb-6">
          Temukan Produk Pakaian Terbaik
        </h1>
        <p class="text-gray-700 mb-8 text-lg md:text-xl">
          Produk berkualitas premium dengan harga tak tertandingi dan pengiriman cepat.
        </p>
        <a class="inline-block bg-red-600 hover:bg-red-700 text-white font-semibold px-8 py-3 rounded shadow transition"
          href="#products">
          Beli Sekarang
        </a>
      </div>
      <div class="md:w-1/2 mt-10 md:mt-0">
        <img alt="Modern vape device with colorful smoke and vibrant background, showcasing sleek design and technology"
          class="w-full rounded-lg shadow-lg" height="400"
          src="https://storage.googleapis.com/a1aa/image/e78e6f2b-192d-423f-51f0-ad17b4f70780.jpg" width="600" />
      </div>
    </div>
  </section>
  <!-- Produk Terbaru -->
  <section class="container mx-auto px-4 py-16" id="products">
  <h2 class="text-3xl font-extrabold text-gray-900 mb-10 text-center">
    Produk Terbaru
  </h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-8" role="list">
    <% if (typeof produkList !== 'undefined' && produkList.length > 0) { %> <% produkList.forEach(function(product) { %> <article class="border border-gray-200 rounded-lg overflow-hidden shadow-sm hover:shadow-lg transition">
          <img alt="<%= product.alt %>"
            class="w-full h-48 object-cover" height="300"
            src="<%= product.foto %>" width="400" /> <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-900 mb-2">
              <%= product.nama_produk %> </h3>
            <p class="text-red-600 font-bold text-xl mb-4"><%= product.harga %></p> <button class="w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 rounded transition">
              Add to Cart
            </button>
          </div>
        </article>
      <% }); %>
    <% } else { %>
      <p class="text-center text-gray-700">No products available.</p>
    <% } %>
  </div>
</section>
  <!-- Footer -->
  <footer class="bg-gray-900 text-gray-400 py-8 px-4">
    <div
      class="container mx-auto max-w-6xl flex flex-col md:flex-row justify-between items-center space-y-4 md:space-y-0">
      <p class="text-sm">Â© 2024 Twone Vape. All rights reserved.</p>
      <div class="flex space-x-6">
        <a aria-label="Facebook" class="hover:text-red-600" href="#">
          <i class="fab fa-facebook-f"> </i>
        </a>
        <a aria-label="Instagram" class="hover:text-red-600" href="#">
          <i class="fab fa-instagram"> </i>
        </a>
        <a aria-label="Twitter" class="hover:text-red-600" href="#">
          <i class="fab fa-twitter"> </i>
        </a>
        <a aria-label="YouTube" class="hover:text-red-600" href="#">
          <i class="fab fa-youtube"> </i>
        </a>
      </div>
    </div>
  </footer>
  <script>
    const mobileMenuButton = document.getElementById("mobile-menu-button");
    const mobileMenu = document.getElementById("mobile-menu");

    mobileMenuButton.addEventListener("click", () => {
      mobileMenu.classList.toggle("hidden");
    });
  </script>
</body>

</html>